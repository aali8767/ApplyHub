<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language Preference"
        android:textColor="#4BA8A4"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layoutArabic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textDirection="locale">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/flag_sa" />

        <TextView
            android:id="@+id/tvArabic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="العربية"
            android:textColor="#333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/checkArabic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/check_24"
            android:visibility="visible"
            app:tint="#4BA8A4" />
    </LinearLayout>

    <!-- اللغة الإنجليزية -->
    <LinearLayout
        android:id="@+id/layoutEnglish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textDirection="locale">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/flag_us" />

        <TextView
            android:id="@+id/tvEnglish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="English"
            android:textColor="#333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/checkEnglish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/check_24"
            android:visibility="visible"
            app:tint="#4BA8A4" />
    </LinearLayout>

</LinearLayout>
